<?php


function get_slogan()
{
	$delo_slogans = [
		t('Делу - время, потехе - час!'),
		t('Кончил дело - гуляй смело!'),
		t('Дело веди, а безделье гони!'),
		t('За всякое дело берись смело!'),
		t('Маленькое дело лучше большого безделья!'),
		t('Не всякий в дело гож, кто лицом пригож!'),
		t('Не спеши языком, торопись делом!'),
		t('О деле суди по исходу!'),
		t('Откладывай безделье, да не откладывай дело!'),
		t('Скучен день до вечера, коли делать нечего!'),
		t('Языком не спеши, а делами не смеши!'),
	];

	$min = 0;
	$max = count($delo_slogans) - 1;
	
	return $delo_slogans[rand($min, $max)];
}